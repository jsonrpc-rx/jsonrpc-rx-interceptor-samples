{
  "name": "jsonrpc-rx-samples",
  "version": "1.0.0",
  "description": "The samples of jsonrpc-rx",
  "scripts": {
    "start:socketio-client": "pnpm run -F socketio-client dev",
    "start:socketio-server": "pnpm run -F socketio-server start",
    "start:webworker-ts-webpack": "pnpm -F webworker-ts-webpack run start",
    "clean": "run-p clean:* && rm -rf node_modules",
    "clean:core": "pnpm run -F webworker-ts-webpack clean",
    "clean:client": "pnpm run -F socketio-client clean",
    "clean:server": "pnpm run -F socketio-server clean",
    "format": "prettier . --write",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@jsonrpc-rx/client": "^0.2.1",
    "@jsonrpc-rx/server": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
